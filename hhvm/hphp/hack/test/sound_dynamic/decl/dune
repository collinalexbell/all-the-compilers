(alias
    (name sound_dynamic_typing_decl)
    (deps %{exe:../../../src/hh_single_decl.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/sound_dynamic/decl/HH_FLAGS)
          (glob_files %{project_root}/test/sound_dynamic/decl/*.php)
          (glob_files %{project_root}/test/sound_dynamic/typing/*.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/sound_dynamic/decl
    --program %{exe:../../../src/hh_single_decl.exe}
    --flags --compare-direct-decl-parser
    )))

(alias
    (name sound_dynamic_typing_decl_typing)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/sound_dynamic/decl/HH_FLAGS)
          (glob_files %{project_root}/test/sound_dynamic/decl/*.php)
          (glob_files %{project_root}/test/sound_dynamic/decl/*.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/sound_dynamic/decl
    --program %{exe:../../../src/hh_single_type_check.exe}
    --out-extension .typecheck.out
    --expect-extension .typecheck.exp
    --batch
    --flags
    --shallow-class-decl
    --error-format raw
    --enable-higher-kinded-types
    )))

(alias
    (name runtest)
    (deps
        (alias sound_dynamic_typing_decl)
        (alias sound_dynamic_typing_decl_typing)
    )
)
